+ngx_http_lua_body_filter_init(void)
+{
+    dd("calling body filter init");
+    ngx_http_next_body_filter = ngx_http_top_body_filter;
+    ngx_http_top_body_filter = ngx_http_lua_body_filter;
+
+    return NGX_OK;
+}
