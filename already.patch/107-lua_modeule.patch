+    eval AUTO_$NGX_AUTO_LIB_PFX=NO
+
+    ngx_auto_lib_check_require  || return
+    ngx_auto_lib_setup          || return
+    ngx_auto_lib_save_feature_vars
+    ngx_auto_lib_run_tests
