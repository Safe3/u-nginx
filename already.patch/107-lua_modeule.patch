+
+                    } else {
+                        *p = ':';
+                    }
+                }
+            }
+
+            if (b == mr->header_in) {
+                break;
+            }
+        }
+    }
+
+    if (last - data > (ssize_t) size) {
+        return luaL_error(L, "buffer error: %d", (int) (last - data - size));
+    }
+
+    lua_pushlstring(L, (char *) data, last - data);
+    return 1;
+}
