+    if (status != 0) {
+        goto done;
+    }
+
+    status = luaL_loadbuffer(L, (char *) lmcf->init_src.data,
+                             lmcf->init_src.len, "init_by_lua")
+             || ngx_http_lua_do_call(log, L);
+
+    if (status != 0) {
+        goto done;
+    }
+
+    status = ngx_http_lua_swap_coroutine_api(log, L);
+
+done:
