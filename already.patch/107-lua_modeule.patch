+
+        rb->temp_file = NULL;
+    }
+
+    if (body.len == 0) {
+
+        if (rb->bufs) {
+
+            for (cl = rb->bufs; cl; cl = cl->next) {
+                if (cl->buf->tag == tag && cl->buf->temporary) {
+
+                    dd("free old request body buffer: size:%d",
+                       (int) ngx_buf_size(cl->buf));
+
+                    ngx_pfree(r->pool, cl->buf->start);
+                    cl->buf->tag = (ngx_buf_tag_t) NULL;
+                    cl->buf->temporary = 0;
