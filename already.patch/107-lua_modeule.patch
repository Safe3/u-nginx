+
+    ctx = ngx_http_get_module_ctx(r, ngx_http_lua_module);
+
+    cl = ngx_http_lua_chains_get_free_buf(r->connection->log, r->pool,
+                                          &ctx->free_recv_bufs,
+                                          u->conf->buffer_size,
+                                          (ngx_buf_tag_t)
+                                          &ngx_http_lua_module);
+
+    if (cl == NULL) {
+        return NGX_ERROR;
+    }
+
+    u->buf_in->next = cl;
+    u->buf_in = cl;
+    u->buffer = *cl->buf;
+
+    return NGX_OK;
