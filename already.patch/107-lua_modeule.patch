+	if a == 0 then
+	    calc = calc + b
+	    break
+	end
+
+	if b == 0 then
+	    calc = calc + a
+	    break
+	end
+
+	if a >= val then
+	    aa = true
+	    a = a - val
+	end
+
+	if b >= val then
+	    bb = true
+	    b = b - val
+	end
+
+	if not (aa and bb) and (aa or bb) then
+	    calc = calc + val
+	end
+    end
+
+    return calc
+end
