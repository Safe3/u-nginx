+ngx_http_lua_ngx_escape_uri(lua_State *L)
+{
+    size_t                   len, dlen;
+    uintptr_t                escape;
+    u_char                  *src, *dst;
+
+    if (lua_gettop(L) != 1) {
+        return luaL_error(L, "expecting one argument");
+    }
